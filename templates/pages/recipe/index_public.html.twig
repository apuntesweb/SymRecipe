{% extends 'base.html.twig' %}

{% block title %}SymRecipe - Mes recettes{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% if not recipes is same as([]) %}
            <h1>Recettes de la communauté</h1>
            <div class="d-flex justify-content-center flex-wrap">
                {% for recipe in recipes %}
                    <div class="card border-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">Recette n° {{ recipe.id }}</div>
                        <div class="card-body">
                            <h4 class="card-tittle">{{ recipe.name }}</h4>
                            <div class="recipe_name">
                                {% if vich_uploader_asset(recipe, 'imageFile') %}
                                    <img style="width: 280px; height: 200px" src="{{ vich_uploader_asset(recipe, 'imageFile') }}">
                                    {% else %}
                                        <img src="../images/recette/cocina2j-65311c985106f633695662.jpg" style="width: 280px; height: 200px">
                                {% endif %}
                            </div>
                            <p class="card-text">{{ recipe.description|slice(0,100) ~ '... ' }}</p>
                            <a href="{{ path('recipe.show', {id: recipe.id}) }}" class="card-link">Voir recette</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <h4>Il n'y a pas de recettes.</h4>
        {% endif %}
    </div>
{% endblock %}

